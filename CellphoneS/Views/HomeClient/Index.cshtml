@using CellphoneS.Models.EF;
@model IEnumerable<Slide>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    IEnumerable<SanPham> tablet = (IEnumerable<SanPham>)ViewBag.Tablet;
    IEnumerable<SanPham> apple = (IEnumerable<SanPham>)ViewBag.Apple;
    IEnumerable<SanPham> newproduct = (IEnumerable<SanPham>)ViewBag.NewProduct;
    IEnumerable<SanPham> sound = (IEnumerable<SanPham>)ViewBag.Sound;
}
<div class="index-banner">
    <div class="wmuSlider example1">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                 @foreach (var item in Model.Take(1))
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src=@Url.Content(item.HinhAnh) alt="First slide">
                        </div>
                    }
                    @foreach (var item in Model.Skip(1))
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src=@Url.Content(item.HinhAnh) alt="First slide">
                        </div>
                    }
                

            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<!--End Slide-->
<!--promotion-->
@{Html.RenderAction("PromotionPartial"); }
<!--promotion-->
<!--End -->
<!--Product-->
 <div>
    <div style="border-bottom:2px solid orange">
        <h3 class="text-center p-2" style="color:white;background:orange;width:fit-content;border-radius:9px">Sản Phẩm Mới Ra Mắt</h3>
    </div>
    @Html.Partial("ProductPartial", newproduct)
</div>
<div>
    <div style="border-bottom:2px solid orange">
        <h3 class="text-center p-2" style="color:white;background:orange;width:fit-content;border-radius:9px">Sản Phẩm Apple</h3>
    </div>
    @Html.Partial("ProductPartial", apple)
</div>
<div>
    <div style="border-bottom:2px solid orange">
        <h3 class="text-center p-2" style="color:white;background:orange;width:fit-content;border-radius:9px">
            Thiết Bị Âm Thanh
        </h3>
    </div>
    @Html.Partial("ProductPartial", sound)
</div>
<div>
    <div style="border-bottom:2px solid orange">
        <h3 class="text-center p-2" style="color:white;background:orange;width:fit-content;border-radius:9px">Máy Tính Bảng - Tablet</h3>
    </div>
    @Html.Partial("ProductPartial", tablet)
</div>
