
@{
    Layout = null;


}

<!doctype html>
<html lang="en">
<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/assets/Admin/AdminLogin/css/style.css">
    <style>
        .btn.btn-primary:active {
            background: rgba(255, 255, 255, 0.08);
            border: none
        }
    </style>
</head>
<body class="img js-fullheight" style="background-image: url(/assets/Admin/AdminLogin/images/magic_grove_by_mumu0909_ddyz5ol.png);">
    <section class="ftco-section">
        <div class="container">
            @if (TempData["AlertMessage"] != null)
            {
                <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                    @TempData["AlertMessage"]
                </div>
            }
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">LOGIN</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Have an account?</h3>
                        @using (Html.BeginForm("Login", "Login", new { @class = "signin-form" }))
                        {
                            <div class="form-group">
                                <input type="text" name="username" class="form-control" placeholder="Username" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" name="pwd" type="password" class="form-control" placeholder="Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Forgot Password</a>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/assets/Admin/AdminLogin/js/jquery.min.js"></script>
    <script src="~/assets/Admin/AdminLogin/js/popper.js"></script>
    <script src="~/assets/Admin/AdminLogin/js/bootstrap.min.js"></script>
    <script src="~/assets/Admin/AdminLogin/js/main.js"></script>
    <script>
        $('#AlertBox').removeClass('hide');
        $('#AlertBox').delay(1000).slideUp(500);
    </script>

</body>
</html>


